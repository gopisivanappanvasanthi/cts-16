<?xml version="1.0"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
	<sitecore>
		<contentSearch>
			<indexConfigurations>
				<defaultSolrIndexConfiguration>
					<fieldMap>
						<fieldNames hint="raw:AddFieldByFieldName">
							<field fieldName="ArticleUrl" returnType="string" />
							<field fieldName="ArticleSpeciality" returnType="string" />
						</fieldNames>
					</fieldMap>
					<documentOptions>
						<fields hint="raw:AddComputedIndexField">
							<field fieldName="ArticleUrl" returnType="string">
								Cts.Foundation.Search.ComputedIndexes.ArticleUrl, Cts.Foundation.Search
							</field>
							<field fieldName="ArticleSpeciality" returnType="string">
								Cts.Foundation.Search.ComputedIndexes.Speciality, Cts.Foundation.Search
							</field>
						</fields>
					</documentOptions>
				</defaultSolrIndexConfiguration>
			</indexConfigurations>
		</contentSearch>
	</sitecore>
</configuration>