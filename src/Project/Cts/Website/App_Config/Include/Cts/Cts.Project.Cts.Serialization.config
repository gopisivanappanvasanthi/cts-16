<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
	<sitecore>
		<unicorn>
			<configurations>
				<configuration name="Cts.Project.Cts" description="This cconfiguration is used to serialize all the content and definition items altogether">
					<predicate>
						<include name="Layouts" database="master" path="/sitecore/layout/Layouts/Project" />
						<include name="Renderings" database="master" path="/sitecore/layout/Renderings/Project" />
						<include name="Placeholder Settings" database="master" path="/sitecore/layout/Placeholder Settings/Project" />
						<include name="Templates" database="master" path="/sitecore/templates/Project" />
						<include name="Languages" database="master" path="/sitecore/system/Languages" />
						<include name="Content" database="master" path="/sitecore/content" />
						<include name="Media" database="master" path="/sitecore/media library/Images" />
						<include name="ChunkCustom" database="core" path="/sitecore/content/Applications/Content Editor/Ribbons/Chunks/Custom" />
						<include name="ChunkChild" database="core" path="/sitecore/content/Applications/Content Editor/Ribbons/Chunks/Get Childitem Count" />
						<include name="ChunkCurrent" database="core" path="/sitecore/content/Applications/Content Editor/Ribbons/Chunks/Get Item Name" />
						<include name="StripCustomTools" database="core" path="/sitecore/content/Applications/Content Editor/Ribbons/Strips/Custom Tools" />
						<include name="StripHouseKeeping" database="core" path="/sitecore/content/Applications/Content Editor/Ribbons/Strips/House Keeping" />
						<include name="RibbonCustomTools" database="core" path="/sitecore/content/Applications/Content Editor/Ribbons/Ribbons/Default/Custom Tools" />
						<include name="RibbonHouseKeeping" database="core" path="/sitecore/content/Applications/Content Editor/Ribbons/Ribbons/Default/House Keeping" />
					</predicate>
					<dataProviderConfiguration enableTransparentSync="false" />
					<syncConfiguration updateLinkDatabase="false" updateSearchIndex="false" />
				</configuration>
			</configurations>
		</unicorn>
	</sitecore>
</configuration>
